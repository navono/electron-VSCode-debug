{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Electron: Debug Main",
        "protocol": "inspector",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "windows": {
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
        },
        "program": "${workspaceFolder}/app/main/index.js",
        "runtimeArgs": [
            "--enable-logging",
            "--remote-debugging-port=9223",
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "console": "integratedTerminal",
        "sourceMapPathOverrides": {
            // "webpack:///./*":   "${workspaceFolder}/*",
            // "webpack:///renderer/*": "${workspaceRoot}/app/**/*.tsx",
            // "webpack:///./~/*": "${webRoot}/node_modules/*",
            // "c://renderer//webpack:///renderer/*": "${workspaceRoot}/app/**/*.tsx",
            "webpack:///*": "${cwd}/app/*",
            // "webpack:///./app/renderer/*": "${workspaceRoot}/app/**/*.tsx",
        }
    },
    {
        "name": "Electron: Attach Renderer",
        "type": "chrome",
        "request": "attach",
        "port": 9223,
        "timeout": 15000,
        "sourceMaps": true,
        // "trace": true,
        "sourceMapPathOverrides": {
            // "webpack:///./*":   "${workspaceFolder}/*",
            // "webpack:///renderer/*": "${workspaceRoot}/app/**/*.tsx",
            // "webpack:///./~/*": "${webRoot}/node_modules/*",
            // "c://renderer//webpack:///renderer/*": "${workspaceRoot}/app/**/*.tsx",
            "webpack:///*": "${cwd}/app/*",
            // "webpack:///./app/renderer/*": "${workspaceRoot}/app/**/*.tsx",
        }
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": [
          "Electron: Debug Main",
          "Electron: Attach Renderer"
      ]
    }
  ]
}