{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Electron: Debug Main",
        "protocol": "inspector",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "windows": {
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
        },
        "program": "${workspaceFolder}/app/main/index.js",
        "runtimeArgs": [
            "--enable-logging",
            "--remote-debugging-port=9223",
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "console": "integratedTerminal",
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
          "${workspaceFolder}/dist/main.js",
          "--enable-logging",
          "--remote-debugging-port=9222"
      ],
      "timeout": 20000,
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}"
    },
    {
        "name": "Electron: Attach Renderer",
        "type": "chrome",
        "request": "attach",
        "port": 9223,
        "webRoot": "${workspaceFolder}/app",
        "timeout": 15000,
        "sourceMaps": true,
        "sourceMapPathOverrides": {
            // "webpack:///./*":   "${workspaceFolder}/*",
            "webpack:///renderer/*": "${workspaceRoot}/app/**/*.tsx",
            // "webpack:///./~/*": "${webRoot}/node_modules/*",
            // "*": "${workspaceRoot}/app/**/*.tsx",
        }
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": [
          "Electron: Debug Main",
          "Electron: Attach Renderer"
      ]
    }
  ]
}